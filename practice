//GUMAGANATO

    <button class="btn" id="1">VOTE</button>
    <button class="btn" id="2">VOTE</button>

    <script>
        var buttons = document.querySelectorAll('.btn');
            for (var i = 0; i < buttons.length; i++) {
                buttons[i].onclick = function() {
                    var index = this.getAttribute('id');
                    var img = document.querySelector('#img' + index);
                    alert(index);
                };
            }
    </script>
    
    
        <button class="btn" id="1">BUTTON 1  <i class="fa fa-plus"></i></button>
    <button class="btn" id="2">BUTTON 2  <i class="fa fa-plus"></i></button>

    <script>
        $(document).ready(function(){
        var buttons = document.querySelectorAll('.btn');
        var icon = document.querySelectorAll('.fa .fa-plus');
            for (var i = 0; i < buttons.length; i++) {
                buttons[i].onclick = function() {


                    $('.fa').removeClass('fa-plus');
                     $('.fa').addClass('fa-minus');
                    
                    
                    var index = this.getAttribute('id');
                    alert(index);
                    
//                    var iconatt = this.getAttribute('class');
//                    alert(icon);
                };
            }
            
            });
    </script>
    
    
<button class="btn" id="1">BUTTON 1  <i class="fa-1 fa-plus p1"></i></button>
<button class="btn" id="2">BUTTON 2  <i class="fa-2 fa-plus p2"></i></button>
<button class="btn" id="3">BUTTON 3  <i class="fa-3 fa-plus p2"></i></button>

<script>
    $(document).ready(function(){
    var buttons = document.querySelectorAll('.btn');
    
    var icon = document.querySelectorAll('.fa .fa-plus');
        for (var i = 0; i < buttons.length; i++) {
            buttons[i].onclick = function() {
                var index = this.getAttribute('id');

                if(index === index){
                    $('.fa-'+index).removeClass('fa-plus');
                    $('.fa-'+index).addClass('fa-minus');
                    console.log(index);
                }
                  alert(index);
            };
        }
        
        });
</script>
